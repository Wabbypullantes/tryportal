<div class = "tocenter">

<h1> Insert event </h1>

<%= form_for (:event) do |f| %>

  <%= f.label "Event Title" %> <br>
  <%= f.text_field :event_name %><br>


  <%= f.label "Description" %><br>
  <%= f.text_area :event_description %><br>

  <%= f.label "Date" %><br>
  <%= f.date_select :event_date %><br>

  <%= f.label "Venue" %><br>
  <%= f.text_field :event_venue %><br><br>


    <%= f.label "Poster" %><br>
    <%= f.file_field :event_img %><br>


  <%= f.submit "Insert a Event" %><br><br>
  <%= link_to "Back", event_index_path %>

  <% end %>
</div>